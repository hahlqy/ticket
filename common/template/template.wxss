.l-container_full-cover {
  background: white;
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 99;
}

.l-animation_transform {
  transition: transform 0.3s linear;
}

.l-transform_hide {
  transform: translateX(99%);
}

.l-container_appear {
  transform: translateX(0);
}

