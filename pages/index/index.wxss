
.station-select {
  color: #080808;
  display: flex;
  font-size: 25px;
  height: 150rpx;
  line-height: 150rpx;
  text-align: center;
}

.station-text {
  border-bottom: 1px solid #aaa;
  flex: 1;
}

.station-change {
  height: 50rpx;
  margin-top: 60rpx;
  width: 50rpx;
}

.train-date {
  border-bottom: 1px solid #aaa;
  height: 100rpx;
  line-height: 100rpx;
  position: relative;
}

.right {
  height: 50rpx;
  right: 0;
  padding: 5rpx;
  position: absolute;
  top: 20rpx;
  width: 50rpx;
}

.train-date .date-tip {
  color: #808080;
  font-size: 13px;
}

.train-date .date-importent {
  color: #080808;
  font-size: 18px;
  margin: 0 10px;
}

.train-options {
  display: flex;
  font-size: 13px;
  justify-content: space-between;
}

.train-option {
  flex: 1;
  margin: 15rpx 0;
}

.main {
  margin-top: 600rpx;
  padding: 0 10px;
}
